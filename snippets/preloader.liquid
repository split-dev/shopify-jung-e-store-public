<style>
#preloader {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: 99;
    background-color: rgba(0, 0, 0, 0.3);
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    display: none;

  }

  .preloader__spinner {
    width: 110px;
    height: 20px;
    --_g: no-repeat radial-gradient(farthest-side,#F95123 94%,#0000);
    background: var(--_g) 25% 0, var(--_g) 75% 0;
    background-size: 20px 20px;
    position: relative;
    animation: d4-0 1s linear infinite;
  }

  .preloader__spinner:before {
    content: "";
    position: absolute;
    height: 20px;
    aspect-ratio: 1;
    border-radius: 50%;
    background: #F95123;
    inset: 0;
    margin: auto;
    animation: d4-1 1s cubic-bezier(0.5,300,0.5,-300) infinite;
  }

  @keyframes d4-0 {
    0,
    24% {
      background-position: 25% 0, 75% 0
    }
    40% {
      background-position: 25% 0, 85% 0
    }
    50%,
    72% {
      background-position: 25% 0, 75% 0
    }
    90% {
      background-position: 15% 0, 75% 0
    }
    100% {
      background-position: 25% 0, 75% 0
    }
  }

  @keyframes d4-1 {
    100% {
      transform: translate(0.1px)
    }
  }
</style>

<div id="preloader">
    <div class="preloader__spinner"> </div>
</div>